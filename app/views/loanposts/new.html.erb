
<%= simple_form_for @loanpost do |f| %>

  <br>
  <%= f.input :image, label: "身份證拍照上傳(正反面)" %>
  <br>
  <%= f.input :email, label: "email" %>
  <br>
  <%= f.input :phone, label: "手機號碼" %>
  <br>
  <%= f.input :occupation, label: "職業",collection: ["學生", "社會人士"] %>
  <br>
  <%= f.input :income, label: "收入來源",collection: ["父母長輩", "工作收入"] %>
  <br>
  <%= f.input :homephone, label: "戶籍電話" %>
  <br>
  <%= f.input :image2, label: "手持身分證正面拍照上傳" %>
  <br>
  <%= f.input :image3, label: "健保卡拍照上傳" %>
  <br>
  <%= f.input :image4, label: "學生證/職別證/名片 拍照上傳" %>
  <br>
  <%= f.input :facebook, label: "FB帳號" %>
  <br><hr><br>
  <%= f.submit "上傳" %>

<% end %>

